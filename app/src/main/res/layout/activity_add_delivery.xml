<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back3"
    android:gravity="center"
    tools:context=".AddDelivery">

    <EditText
        android:id="@+id/didd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Product Code"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dnamee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Product Name"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dprisee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Product Price"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dqtye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Product Quantity"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dcustomernamee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Customer Name"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dcustomerNice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Customer NIC"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dcustomerContacte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Customer Contact"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dcustomerAddresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Customer Address"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <Button
        android:id="@+id/adddeliverye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/orange"
        android:text="Add Delivery Item"
        android:textColor="@color/white"
        app:cornerRadius="15dp" />

</LinearLayout>